{
    "name":                 "shrikeh/macaroon-bakery",
    "description":          "Simple DI container to aid in making macaroons",
    "minimum-stability":    "dev",
    "license":              "MIT",
    "homepage":             "https://github.com/shrikeh/macaroon-bakery",
    "type":                 "library",
    "authors": [
        {
            "name":     "Barney Hanlon",
            "email":    "barney@shrikeh.net"
        }
    ],
    "require": {
        "pimple/pimple":                "~2",
        "shrikeh/macaroons":            "*"
    },
    "require-dev": {
        "phpspec/phpspec":              "2.0.*@dev",
        "phploc/phploc":                ">=1.7.4",
        "pdepend/pdepend":              "1.1.3",
        "sebastian/phpcpd":             "2.0.*@dev",
        "mayflower/php-codebrowser":    "~1.1",
        "phpmd/phpmd" :                 ">=1.4.0",
        "squizlabs/php_codesniffer":    "1.*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {"psr-4": {"Shrikeh\\Macaroons\\": "src/"}}
}
